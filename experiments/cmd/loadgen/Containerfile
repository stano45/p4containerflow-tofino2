FROM docker.io/golang:1.24 as builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY cmd/loadgen/main.go cmd/loadgen/main.go

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -ldflags '-extldflags "-static"' -o loadgen ./cmd/loadgen/

FROM alpine:latest

RUN apk --no-cache add ca-certificates

RUN addgroup -S appgroup && adduser -S appuser -G appgroup

WORKDIR /home/appuser/

COPY --from=builder /app/loadgen .

RUN chmod +x ./loadgen

USER appuser

CMD ["./loadgen"]
